<h2 class="text-center">
  Search for New Friends
</h2>
{{render "friendable-users"}}

<hr/>

<h2 class="text-center">
  My Friends
</h2>
{{#if pagedContent}}
  <div class="row block-grid-xs-3 block-grid-sm-4 block-grid-lg-6">
    {{#each friend in pagedContent}}
      <div class="block-grid-item">
        {{#link-to "userStatLog" friend tagName="div" classNames="u-pointer"}}
          {{#if friend.hasAvatar}}
            <img {{bind-attr src="friend.avatarUrl"}} class="u-circle friend-avatar" />
          {{else}}
            <img src="http://res.cloudinary.com/frolfr/image/upload/v1450881126/avatar-placeholder_n7w7z8.png" class="u-circle friend-avatar" />
          {{/if}}
          <div class="text-center">
            {{friend.fullName}}
          </div>
        {{/link-to}}
      </div>
    {{/each}}
  </div>
  {{#if hasNextPage}}
    <div class="push-down"></div>
    <div class="row push-down text-center">
      <p><a class="btn btn-primary" {{action "loadNext"}}>More Friends</a></p>
    </div>
  {{/if}}
{{else}}
  <p>
    You don't have any friends yet.
  </p>
{{/if}}
