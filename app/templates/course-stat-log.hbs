<div class="nav nav-pills nav-justified">
  {{#link-to "courseStatLog" tagName="li" classNames="u-pointer"}}
    <a>
      <span>
        Overall
      </span>
    </a>
  {{/link-to}}
  {{#link-to "holeStatLogs" tagName="li" classNames="u-pointer"}}
    <a>
      <span>
        Holes
      </span>
    </a>
  {{/link-to}}
</div>

<div class="push-down"></div>

<ul class="list-group">
  <li class="list-group-item">
    <span class="pull-right">
      {{model.totalScorecardsPlayed}}
    </span>
    Total Scorecards Played
  </li>
  <li class="list-group-item">
    <span class="pull-right">
      {{model.completedScorecardsPlayed}}
    </span>
    Completed Scorecards Played
  </li>
</ul>

<ul class="list-group">
  <li class="list-group-item">
    <span class="pull-right">
    {{display-score model.displayAverageScore}}
    </span>
    Average Score
  </li>
  <li class="list-group-item">
    <span class="pull-right">
    {{display-score model.bestScore}}
    </span>
    Best Score
  </li>
</ul>

<ul class="list-group">
  <li class="list-group-item">
    <span class="pull-right">
      {{model.displayAverageStrokes}}
    </span>
    Average Strokes
  </li>
  <li class="list-group-item">
    <span class="pull-right">
      {{model.bestStrokes}}
    </span>
    Best Strokes
  </li>
</ul>

<h3 class="text-center">
  Shot Breakdown
</h3>
<div class="chart">
</div>

{{shot-breakdown-chart pars=model.totalPars birdies=model.totalBirdies bogeys=model.totalBogeys eagles=model.totalEagles doubles=model.totalDoublesOrWorse}}
