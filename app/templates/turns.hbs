<div class="row">
  <div class="pull-left">
    <img src="https://s3.amazonaws.com/frolfr/hole_icon.jpg" alt="Hole #" width="50" height="50" class="pull-left" />
    <h2 class="text-center pull-left">
      {{holeNumber}}
    </h2>
  </div>
  <div class="pull-right">
    <div class="btn-group">
      <button {{bind-attr class=":btn :btn-default :btn-lg isPar3:darkened"}} {{action "changePar" 3 on="click"}}>
        3
      </button>
      <button {{bind-attr class=":btn :btn-default :btn-lg isPar4:darkened"}} {{action "changePar" 4 on="click"}}>
        4
      </button>
      <button {{bind-attr class=":btn :btn-default :btn-lg isPar5:darkened"}} {{action "changePar" 5 on="click"}}>
        5
      </button>
    </div>
  </div>
</div>
{{#each controller}}
  <div class="media">
    <div class="media-left media-middle">
      {{#if scorecard.hasUserAvatar}}
        <img {{bind-attr src="scorecard.userAvatarUrl"}} class="media-object thumbnail u-circle" />
      {{else}}
        <h2 class="media-object">
          {{scorecard.userInitials}}
        </h2>
      {{/if}}
    </div>
    <div class="media-body row">
      <div class="vertical-align">
        <button {{action "subtractOne" this on="click"}} class="btn btn-primary col-xs-3 text-center u-condensed btn-lg">
          <span class="glyphicon glyphicon-minus">
          </span>
        </button>
        <div class="col-xs-3">
          <h3 {{bind-attr class=":text-center parStatus"}}>
            {{displayScore}}
          </h3>
        </div>
        <button {{action "addOne" this on="click"}} class="btn btn-primary col-xs-3 text-center u-condensed btn-lg">
          <span class="glyphicon glyphicon-plus">
          </span>
        </button>
        <div class="col-xs-3 text-center">
          <div class="pull-right">
            <div class="pull-left total">
              {{scorecard.formattedTotals}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}
<div class="well row">
  {{#unless isFirstHole}}
    <div class="pull-left">
      <a {{action "previousHole" on="click"}} class="btn btn-success btn-lg">
        <span class="glyphicon glyphicon-chevron-left">
        </span>
      </a>
    </div>
  {{/unless}}
  <div class="pull-right">
    <a {{action "nextHole" on="click"}} class="btn btn-success btn-lg">
      {{#if isLastHole}}
        <span>
          Recap
        </span>
      {{else}}
        <span class="glyphicon glyphicon-chevron-right">
        </span>
      {{/if}}
    </a>
  </div>
</div>